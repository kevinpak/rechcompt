{"ast":null,"code":"import { Fragment as _Fragment } from \"react/jsx-runtime\";\nimport { jsx as _jsx } from \"react/jsx-runtime\";\nimport { useState, useEffect } from 'react';\nimport styles from './../../styles/components/go-up-the-page.module.scss';\n\nconst GoUpThePage = () => {\n  const {\n    0: statusAnchor,\n    1: setStatusAnchor\n  } = useState(false);\n\n  const goUp = () => {\n    window.scrollTo(0, 0);\n  };\n\n  useEffect(() => {\n    window.onscroll = function (e) {\n      let scrollPosition = window.pageYOffset;\n\n      if (scrollPosition > 350) {\n        setStatusAnchor(true);\n      } else {\n        setStatusAnchor(false);\n      }\n    };\n  }, [statusAnchor]);\n  return /*#__PURE__*/_jsx(_Fragment, {\n    children: statusAnchor && /*#__PURE__*/_jsx(\"button\", {\n      className: styles.btn + ' ',\n      onClick: () => goUp(),\n      children: /*#__PURE__*/_jsx(\"span\", {\n        className: styles.icon + ' icon-arrow-up icon-inner'\n      })\n    })\n  });\n};\n\nexport default GoUpThePage;","map":null,"metadata":{},"sourceType":"module"}